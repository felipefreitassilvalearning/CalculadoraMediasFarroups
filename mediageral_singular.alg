algoritmo "mediageral"

var
   T1, T2, T3, M: Real
inicio

      Escreva("Nota do 1 tri: ")
      Leia (T1)
      Escreva("Nota do 2 tri: ")
      Leia (T2)
      Escreva("Nota do 3 tri: ")
      Leia (T3)
      M <- ((3*(T3) + 2*(T2) + (T1)) / 6)
      Escreval ("=======================")
      EscrevaL("Sua média geral é: ", M:4:2)
      Escreva ("=======================")

fimalgoritmo
